<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Styles.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="ezmoveapp" ng-controller="employeecontroller">
	<div class="contentview">
		<nav class="navbar">
			<div class="container-fluid">
				<div class="collapse navbar-collapse" id="collapse-1">
					<div class="row">
						<div class="col-lg-12">
							<div class="col-lg-3">
								<div class="navbar-header">
									<a href="@Url.Action("Index","Home",null)">
										<img src="~/images/map.png" width="50" height="50" class="" alt="">
									</a>
									<span style="font-size:20px;">Company Name</span>
								</div>
							</div>
							<div class="col-lg-5"></div>

							<div class="col-lg-2">
								<div class="search" style="margin:6px;padding-top:6px;">
									<i class="fa fa-search"></i>
									<input type="search" class="form-control" placeholder="Search" />
								</div>
							</div>
							<div class="col-lg-2">
								<ul class="nav navbar-nav navbar-right">
									<li><a uib-popover="Hello" popover-title="Hello" popover-placement="bottom" popover-trigger="focus"><i class="fa fa-2x fa-hand-pointer-o" style="color: #3ebede;"></i></a></li>
									<li><a uib-popover="Hello" popover-title="Hello" popover-placement="bottom" popover-trigger="focus"><i class="fa fa-volume-control-phone fa-2x" style="color: #3ebede;"></i></a></li>
									<li><a href="#"><i class="fa fa-bell fa-2x" style="color: #3ebede;"></i></a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<hr />
			</div>
		</nav>
		<div class="row">
			<div class="col-xs-2">
				<nav id="sidebar">
					<div class="sidebar-header">
					</div>
					<ul class="list-unstyled components">
						<h4>Manage</h4>
						<li>
							<a ui-sref="employees">Employees</a>
						</li>
						<li>
							<a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false">Trips</a>
							<ul class="collapse list-unstyled" id="pageSubmenu">
								<li><a href="#">New</a></li>
								<li><a href="#">OnGoing</a></li>
								<li><a href="#">Yet To Start</a></li>
							</ul>
						</li>
						<li>
							<a href="#rosterSubmenu" data-toggle="collapse" aria-expanded="false">Roaster</a>
							<ul class="collapse list-unstyled" id="rosterSubmenu">
								<li><a href="#">Shifts</a></li>
								<li><a href="#">Assign Employees</a></li>
								<li><a href="#">Batch Update</a></li>
							</ul>
						</li>
						<li>
							<a href="#">Reports</a>
						</li>
						<li>
							<a href="#">Scheduled Jobs</a>
						</li>
						<li>
							<a href="#">Profile</a>
						</li>
					</ul>
				</nav>
			</div>
			<div class="col-xs-10">@RenderBody()</div>
		</div>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
